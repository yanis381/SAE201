<UserControl x:Class="SAE201.UCPages.UCPlats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE201.UCPages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Rechercher un client" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="searchBox" Width="300" Margin="0,0,0,10"  />

            <DataGrid x:Name="dataPlats" Height="300"
              AutoGenerateColumns="False"
              SelectionMode="Single"
              Margin="0,0,0,10"
              IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nom Plats" Binding="{Binding NomPlat}" Width="*" />
                    <DataGridTextColumn Header="Prix unitaire" Binding="{Binding PrixUnitaire}" Width="*" />
                    <DataGridTextColumn Header="delai preparations" Binding="{Binding DelaiPreparation}" Width="*" />
                    <DataGridTextColumn Header="nombre de personne " Binding="{Binding NbPersonne}" Width="*" />
                    <DataGridTextColumn Header="categorie " Binding="{Binding NomCategorie }" Width="*" />
                    <DataGridTextColumn Header="categorie " Binding="{Binding  NomSousCategorie }" Width="*" />
                    
                    
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
