<UserControl x:Class="SAE201.UCPages.UCPlats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE201.UCPages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Rechercher un plat" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Rechercher avec le nom                        par le prix              par categorie      par sous categorie" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="textBoxPlats" Width="150" Margin="0,30,500,10" TextChanged="textBoxPlats_TextChanged"  />
            <TextBox x:Name="textBoxPlatsPrix" Width="150" Margin="0,-30,0,10" TextChanged="textBoxPlats_TextChanged"  />
            <ComboBox x:Name="comboboxcategorie" Width="120" Margin="320,-50,0,0" LostFocus="comboboxcategorie_LostFocus">
                <ComboBoxItem >
                    <TextBlock>Tout</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock>Charcuterie</TextBlock>   
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock>Plat traiteur</TextBlock>
                </ComboBoxItem>
            </ComboBox>
            <ComboBox x:Name="comboxsouscategorie" Width="120" Margin="0,-30,-600,0"  LostFocus="comboxsouscategorie_LostFocus">
                <ComboBoxItem>
                    <TextBlock>Tout</TextBlock>      
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock>Pâtés</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock>Cuisine du monde</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock>Traiteur festif</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock>Terrines</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock>Jambons	Saucissons</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock>Végétarien traiteur</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock>Spécialités régionales</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock>Plats cuisinés</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock>Produits fumés</TextBlock>
                </ComboBoxItem>
                

            </ComboBox>


            <DataGrid x:Name="dataPlats" Height="232"
              AutoGenerateColumns="False"
              SelectionMode="Single"
              Margin="0,20,0,10"
              IsReadOnly="True" Width="690">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nom du plat" Binding="{Binding NomPlat}" Width="*" />
                    <DataGridTextColumn Header="Prix unitaire (€)" Binding="{Binding PrixUnitaire, StringFormat={}{0:N2}}" Width="*" />
                    <DataGridTextColumn Header="Délai préparation (j)" Binding="{Binding DelaiPreparation}" Width="*" />
                    <DataGridTextColumn Header="Nombre de personnes" Binding="{Binding NbPersonne}" Width="*" />
                    <DataGridTextColumn Header="Catégorie" Binding="{Binding Categorie2.NomCategorie}" Width="*" />
                    <DataGridTextColumn Header="Sous-catégorie" Binding="{Binding SousCategorie3.NomSousCategorie}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="creerproduit" Content="ajouter plat" Width="150" Click="creerproduit_Click" Margin="0,14,0,0"/>
            
        </StackPanel>
    </Grid>
</UserControl>
