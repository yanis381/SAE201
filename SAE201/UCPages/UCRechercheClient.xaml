<UserControl x:Class="SAE201.UCPages.UCRechercheClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE201.UCPages"
             mc:Ignorable="d" 
              d:Height="500" Width="825">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Rechercher un client" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="searchBox" Width="300" Margin="0,0,0,10"  TextChanged="searchBox_TextChanged"/>

            <DataGrid x:Name="dataClients" Height="300"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  Margin="0,0,0,10"
                  IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nom" Binding="{Binding NomClient}" Width="*" />
                    <DataGridTextColumn Header="Prénom" Binding="{Binding PrenomClient}" Width="*" />
                    <DataGridTextColumn Header="Téléphone" Binding="{Binding TelClient}" Width="*" />
                    <DataGridTextColumn Header="Adresse (rue)" Binding="{Binding AdresseRue}" Width="*" />
                    <DataGridTextColumn Header="Code Postal" Binding="{Binding AdresseCodePostal}" Width="*" />
                    <DataGridTextColumn Header="Ville" Binding="{Binding AdresseVille}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Sélectionner" Width="150" Margin="10,0" Click="Valider_Click"/>
                <Button Content="Voir historique" Width="150" Margin="0,10,0,0" Click="VoirHistorique_Click"/>
                <Button Content="Créer nouveau client" Width="180" Margin="10,0" Click="Creer_Click"/>
            </StackPanel>

            <DataGrid x:Name="dataHistorique"
          AutoGenerateColumns="False"
          Visibility="Collapsed"
          Margin="0,20,0,0"
          Height="200"
          HeadersVisibility="Column">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding NumCommande}" Width="Auto" />
                    <DataGridTextColumn Header="Date commande" Binding="{Binding DateCommande, StringFormat=dd/MM/yyyy}" Width="*" />
                    <DataGridTextColumn Header="Date retrait" Binding="{Binding DateRetraitPrevue, StringFormat=dd/MM/yyyy}" Width="*" />
                    <DataGridTextColumn Header="Payée" Binding="{Binding Payee}" Width="Auto" />
                    <DataGridTextColumn Header="Retirée" Binding="{Binding Retiree}" Width="Auto" />
                    <DataGridTextColumn Header="Prix (€)" Binding="{Binding PrixTotal}" Width="Auto" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
