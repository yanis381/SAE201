<UserControl
    x:Class="SAE201.UCPages.UCRechercheClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#E26A6A">
        <Border
            Margin="30"
            Padding="30"
            Background="White"
            CornerRadius="10">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Titre  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="#333"
                    Text="Recherche de clients" />

                <!--  Champ de recherche  -->
                <StackPanel
                    Grid.Row="1"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Text="Rechercher par nom, prénom, ou téléphone" />
                    <TextBox
                        x:Name="textBoxRechercheClient"
                        Width="300"
                        TextChanged="textBoxRechercheClient_TextChanged" />
                </StackPanel>

                <!--  Tableau  -->
                <DataGrid
                    x:Name="dataGridClients"
                    Grid.Row="2"
                    Height="250"
                    Margin="0,0,0,20"
                    AutoGenerateColumns="False"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding NomClient}"
                            Header="Nom" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding PrenomClient}"
                            Header="Prénom" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding TelClient}"
                            Header="Téléphone" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding AdresseRue}"
                            Header="Adresse (rue)" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding AdresseCodePostal}"
                            Header="Code Postal" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding AdresseVille}"
                            Header="Ville" />
                    </DataGrid.Columns>
                </DataGrid>

                <!--  Boutons  -->
                <StackPanel
                    Grid.Row="3"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        x:Name="btnSelectionner"
                        Width="130"
                        Height="35"
                        Margin="10,0"
                        Background="#5CB85C"
                        Click="btnSelectionner_Click"
                        Content="✔ Sélectionner"
                        FontWeight="Bold"
                        Foreground="White" />

                    <Button
                        x:Name="btnVoirHistorique"
                        Width="150"
                        Height="35"
                        Margin="10,0"
                        Background="#0275d8"
                        Click="btnVoirHistorique_Click"
                        Content="📄 Voir historique"
                        FontWeight="Bold"
                        Foreground="White" />

                    <Button
                        x:Name="btnCreerClient"
                        Width="180"
                        Height="35"
                        Margin="10,0"
                        Background="#f0ad4e"
                        Click="btnCreerClient_Click"
                        Content="➕ Créer nouveau client"
                        FontWeight="Bold"
                        Foreground="White" />
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</UserControl>
