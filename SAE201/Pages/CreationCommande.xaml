<Window x:Class="SAE201.Pages.CreationCommande"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier commande"
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#E26A6A"
        ResizeMode="NoResize">

    <DockPanel>
        <!-- Bandeau rouge -->
        <Border Background="#E26A6A" Height="80" DockPanel.Dock="Top">
            <TextBlock Text="Modification d'une commande"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Contenu scrollable -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="White" CornerRadius="10" Padding="30"
                    HorizontalAlignment="Center" VerticalAlignment="Top"
                    Margin="30">
                <StackPanel x:Name="stackPanelCommande" Width="320" HorizontalAlignment="Center">

                    <!-- Date commande -->
                    <TextBlock Text="Date de commande" Margin="0,10,0,5"/>
                    <DatePicker x:Name="dateCommandePicker" 
                                SelectedDate="{Binding DateCommande}"
                                Height="35"/>

                    <!-- Date retrait -->
                    <TextBlock Text="Date de retrait prévue" Margin="0,15,0,5"/>
                    <DatePicker x:Name="dateRetraitPicker" 
                                SelectedDate="{Binding DateRetraitPrevue}"
                                Height="35"/>

                    <!-- Checkboxes -->
                    <CheckBox x:Name="checkPayee" 
                              Content="Payée" 
                              IsChecked="{Binding Payee}"
                              Margin="0,15,0,5"/>

                    <CheckBox x:Name="checkRetiree" 
                              Content="Retirée" 
                              IsChecked="{Binding Retiree}"
                              Margin="0,10,0,5"/>

                    <!-- Prix total -->
                    <TextBlock Text="Prix total (€)" Margin="0,15,0,5"/>
                    <TextBox x:Name="textPrix" 
                             Text="{Binding PrixTotal}"
                             Height="35"/>

                    <!-- Boutons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                        <Button Content="✅ Valider"
                                Width="120" Height="40"
                                Background="#5CB85C" Foreground="White"
                                FontWeight="Bold" Margin="10,0"
                                Click="Valider_Click"/>

                        <Button Content="❌ Annuler"
                                Width="120" Height="40"
                                Background="#B34444" Foreground="White"
                                FontWeight="Bold" Margin="10,0"
                                Click="Annuler_Click"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </ScrollViewer>
    </DockPanel>
</Window>