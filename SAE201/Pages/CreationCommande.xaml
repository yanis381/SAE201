<Window x:Class="SAE201.Pages.CreationCommande"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE201.Pages"
        mc:Ignorable="d"
        Title="CreationCommande" Height="350" Width="596.8">
    <Grid>
        <StackPanel x:Name="stackPanelCommande" Margin="20">
            <TextBlock Text="Date commande"/>
            <DatePicker x:Name="dateCommandePic" SelectedDate="{Binding DateCommande, Mode=TwoWay}" />

            <TextBlock Text="Date retrait prévue"/>
            <DatePicker x:Name="dateRetraitPicker" SelectedDate="{Binding DateRetraitPrevue, Mode=TwoWay}"  />

            <CheckBox x:Name="checkPayee" Content="Payée"  IsChecked="{Binding Payee , 
    ValidatesOnExceptions=True}"/>
            <CheckBox x:Name="checkRetiree" Content="Retirée"  IsChecked="{Binding Retiree , 
    ValidatesOnExceptions=True}"/>

            <TextBlock Text="Nb de personne prévue"/>
            <TextBox x:Name="textnbpersonneprevue" Text="{Binding NbpersonnePrevue}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Valider" Width="100" Margin="10" Click="Valider_Click"/>
                <Button Content="Annuler" Width="100" Margin="10" Click="Annuler_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
