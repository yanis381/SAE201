<Window x:Class="SAE201.Pages.CreationCommande"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nouvelle commande"
        Height="580" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#E26A6A"
        ResizeMode="NoResize">

    <DockPanel>
        <!-- Bandeau rouge -->
        <Border Background="#E26A6A" Height="80" DockPanel.Dock="Top">
            <TextBlock Text="Création d’une commande"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Contenu scrollable -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="White" CornerRadius="10" Padding="30"
                    HorizontalAlignment="Center" VerticalAlignment="Top"
                    Margin="30">
                <StackPanel x:Name="stackPanelCommande" Width="320" HorizontalAlignment="Center">

                    <!-- Date commande -->
                    <TextBlock Text="Date de commande" Margin="0,10,0,5"/>
                    <DatePicker x:Name="dateCommandePicker" Height="35"/>

                    <!-- Date retrait -->
                    <TextBlock Text="Date de retrait prévue" Margin="0,15,0,5"/>
                    <DatePicker x:Name="dateRetraitPicker" Height="35"/>

                    <!-- Checkboxes -->
                    <CheckBox x:Name="checkPayee" Content="Payée" FontSize="14" Margin="0,15,0,0"/>
                    <CheckBox x:Name="checkRetiree" Content="Retirée" FontSize="14" Margin="0,5,0,10"/>

                    <!-- Prix -->
                    <TextBlock Text="Prix total (€)" Margin="0,15,0,5"/>
                    <TextBox x:Name="textPrix" Height="35" FontSize="14"/>

                    <!-- Bouton Valider -->
                    <Button Content="✅ Valider"
                            Width="140" Height="40"
                            Background="#5CB85C" Foreground="White"
                            FontWeight="Bold" Margin="0,25,0,10"
                            Click="Valider_Click"/>

                    <!-- Bouton Annuler -->
                    <Button Content="❌ Annuler"
                            Width="140" Height="40"
                            Background="#B34444" Foreground="White"
                            FontWeight="Bold" Margin="0,0,0,20"
                            Click="Annuler_Click"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </DockPanel>
</Window>
