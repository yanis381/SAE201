<Page x:Class="SAE201.Pages.Connexions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SAE201.Pages"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="Connexions" Height="554">

    <DockPanel>
        <!-- Bandeau rouge en haut -->
        <Border Background="#F94C4C" Height="80" DockPanel.Dock="Top">
            <Image x:Name="logo_sibilia_png" Source="/Image/logo-sibilia.png" Height="50" Margin="0,40,0,-10"/>
        </Border>

        <!-- Formulaire blanc centré -->
        <Border Background="White" CornerRadius="10" Width="400" Padding="30"
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,30">

            <StackPanel>
                <Image x:Name="vache_jpg" Source="/Image/vache.jpg" Height="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="Connexion – Maison Sibilia" FontSize="16" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Login" FontWeight="SemiBold"/>
                <TextBox Height="23" Margin="0,5,0,10" Text="entrez votre login" Foreground="Gray"/>

                <TextBlock Text="Mot de passe" FontWeight="SemiBold"/>
                <PasswordBox Height="30" Margin="0,5,0,10"/>

                <!-- Checkbox + lien côte à côte -->
                <Grid Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Content="Se souvenir de moi" Grid.Column="0"/>
                    <TextBlock Text="Mot de passe oublié ?" Grid.Column="1"
                               FontWeight="Bold" VerticalAlignment="Center" Cursor="Hand" Margin="10,0,0,0"/>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnValider" Content="Valider ✔" Width="100" Height="35" Background="#5CB85C" 
                    Foreground="White" FontWeight="Bold" Margin="5" Click="btnValider_Click"/>
                </StackPanel>

                <TextBlock Text="© Maison Sibilia – Espace connexion" FontSize="10"
                   HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </DockPanel>
</Page>
