<Window x:Class="SAE201.Pages.CreationPlats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE201.Pages"
        mc:Ignorable="d"
        Title="CreationPlats" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,22,0,0" TextWrapping="Wrap" Text="Nom du plats" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxCreaPlats" HorizontalAlignment="Center" Margin="0,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBoxPrixPlat" Text="{Binding Montant,StringFormat={}{0:N2} €}" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" Margin="0,135,0,0"/>
        <TextBlock x:Name="TextPrixPlat" HorizontalAlignment="Center" Margin="0,115,0,0" TextWrapping="Wrap" Text="Prix du plats" VerticalAlignment="Top"/>
        <TextBlock x:Name="TextBlocNmPersonne" HorizontalAlignment="Center" TextWrapping="Wrap" Text="nombre de personne" VerticalAlignment="Top" Margin="0,195,0,0"/>
        <TextBox HorizontalAlignment="Center" Margin="0,237,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ValidBTnCReaPlats" Content="Valider" HorizontalAlignment="Left" Margin="340,370,0,0" VerticalAlignment="Top" Background="#FF25FF00" BorderBrush="{x:Null}"/>
        <Button x:Name="AnnulerBTnCReaPlats" Content="Annuler" HorizontalAlignment="Left" Margin="444,370,0,0" VerticalAlignment="Top" Click="AnnulerBTnCReaPlats_Click" BorderBrush="{x:Null}" Foreground="Black" Background="Red"/>
        <TextBlock x:Name="TextBlocNmPersonne_Copy" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,260,0,0"><Run Language="fr-fr" Text="type de plats"/></TextBlock>
        <ComboBox x:Name="comboBoxTypePlats" HorizontalAlignment="Center" Margin="0,292,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem> entrée</ComboBoxItem>
            <ComboBoxItem>plats</ComboBoxItem>
            <ComboBoxItem>dessert</ComboBoxItem>
        </ComboBox>

    </Grid>
</Window>
