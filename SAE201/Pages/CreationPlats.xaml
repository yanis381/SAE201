<Window x:Class="SAE201.Pages.CreationPlats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE201.Pages"
        mc:Ignorable="d"
        Title="CreationPlats" Height="549" Width="300" ResizeMode="NoResize">
    <Grid>
        <Image Source="/image/logo-sibilia.png" Margin="25,354,639,18"/>
        <StackPanel Margin="20" x:Name="stackPanelcreerPlat">
            <TextBlock Text="Nom du plat" Margin="0,10"/>
            <TextBox x:Name="textBoxCreaPlats" TextWrapping="Wrap" Text="{Binding NomPlat, ValidatesOnDataErrors=True}" Width="200"/>

            <TextBlock Text="Prix du plat" Margin="0,10"/>
            <TextBox x:Name="TextBoxPrixPlat" TextWrapping="Wrap" Text="{Binding PrixUnitaire, ValidatesOnDataErrors=True}" Width="200"/>

            <TextBlock Text="Nombre de personnes" Margin="0,10"/>
            <TextBox x:Name="textBoxNbPersonne" TextWrapping="Wrap" Text="{Binding NbPersonne, ValidatesOnDataErrors=True}" Width="200"/>

            <TextBlock Text="Temps de préparation" Margin="0,10"/>
            <TextBox x:Name="textBoxDelai" TextWrapping="Wrap" Text="{Binding DelaiPreparation, ValidatesOnDataErrors=True}" Width="200"/>

            <TextBlock Text="Catégorie du plat" Margin="0,10"/>
            <ComboBox x:Name="comboBoxTypePlatsDef" Width="200">
                <ComboBoxItem Content="Charcuterie"/>
                <ComboBoxItem Content="Plat traiteur"/>
            </ComboBox>

            <TextBlock Text="Sous-catégorie" Margin="0,10"/>
            <ComboBox x:Name="comboBoxSousCategorie" Width="200">
                <ComboBoxItem Content="Printemps"/>
                <ComboBoxItem Content="Été"/>
                <ComboBoxItem Content="Automne"/>
                <ComboBoxItem Content="Hiver"/>
            </ComboBox>

            <TextBlock Text="Période" Margin="0,10"/>
            <ComboBox x:Name="comboBoxPeriodeDef" Width="200">
                <ComboBoxItem Content="Printemps"/>
                <ComboBoxItem Content="Été"/>
                <ComboBoxItem Content="Automne"/>
                <ComboBoxItem Content="Hiver"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" Margin="0,20">
                <Button x:Name="ValidBTnCReaPlats" Content="Valider" Width="100" Margin="10" Click="ValidBTnCReaPlats_Click"/>
                <Button x:Name="AnnulerBTnCReaPlats" Content="Annuler" Width="100" Margin="10" Click="AnnulerBTnCReaPlats_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>

</Window>
