<Window x:Class="SAE201.Pages.CreationPlats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE201.Pages"
        mc:Ignorable="d"
        Title="CreationPlats" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Image Source="/image/logo-sibilia.png" Margin="25,354,639,18"/>
        <TextBlock HorizontalAlignment="Left" Margin="261,95,0,0" TextWrapping="Wrap" Text="Nom du plats" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxCreaPlats" HorizontalAlignment="Left" Margin="237,137,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBoxPrixPlat" Text="{Binding Montant,StringFormat={}{0:N2} €}" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" Margin="468,137,0,0"/>
        <TextBlock x:Name="TextPrixPlat" HorizontalAlignment="Left" Margin="496,95,0,0" TextWrapping="Wrap" Text="Prix du plats" VerticalAlignment="Top"/>
        <TextBlock x:Name="TextBlocNmPersonne" HorizontalAlignment="Left" TextWrapping="Wrap" Text="nombre de personne" VerticalAlignment="Top" Margin="241,192,0,0"/>
        <TextBox HorizontalAlignment="Left" Margin="232,242,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ValidBTnCReaPlats" Content="Valider" HorizontalAlignment="Left" Margin="336,326,0,0" VerticalAlignment="Top" Background="#FF25FF00" BorderBrush="{x:Null}" Width="60" Height="30"/>
        <Button x:Name="AnnulerBTnCReaPlats" Content="Annuler" HorizontalAlignment="Left" Margin="440,327,0,0" VerticalAlignment="Top" Click="AnnulerBTnCReaPlats_Click" BorderBrush="{x:Null}" Foreground="Black" Background="Red" Width="60" Height="30"/>
        <TextBlock x:Name="TextBlocNmPersonne_Copy" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="493,187,0,0"><Run Language="fr-fr" Text="type de plats"/></TextBlock>
        <ComboBox x:Name="comboBoxTypePlats" HorizontalAlignment="Left" Margin="467,242,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem>entrée</ComboBoxItem>
            <ComboBoxItem>plats</ComboBoxItem>
            <ComboBoxItem>dessert</ComboBoxItem>
        </ComboBox>

    </Grid>

</Window>
