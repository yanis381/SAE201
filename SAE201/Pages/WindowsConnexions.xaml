<Window
    x:Class="SAE201.Pages.PageConnexion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Connexion"
    Width="800"
    Height="600"
    WindowStartupLocation="CenterScreen">

    <DockPanel Background="#E26A6A">
        <!--  Bandeau rouge avec logo  -->
        <Border
            Height="80"
            Background="#E26A6A"
            DockPanel.Dock="Top">
            <Image
                Height="50"
                Margin="20,0"
                VerticalAlignment="Center"
                Source="/image/logo-sibilia.png" />
        </Border>

        <!--  Carte blanche centrée  -->
        <Border
            Width="420"
            Margin="0,30,0,30"
            Padding="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            CornerRadius="10">
            <StackPanel VerticalAlignment="Center">
                <!--  Logo  -->
                <Image
                    Height="40"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Source="/Image/vache.jpg" />

                <!--  Titre  -->
                <TextBlock
                    Margin="0,0,0,25"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Connexion – Maison Sibilia" />

                <!--  Login  -->
                <TextBlock Margin="0,0,0,5" Text="Nom utilisateur" />
                <TextBox
                    x:Name="tbLogin"
                    Height="30"
                    Margin="0,0,0,15"
                    FontSize="14"
                    Foreground="Gray"
                    Text="" />

                <!--  Mot de passe  -->
                <TextBlock Margin="0,0,0,5" Text="Mot de passe" />
                <PasswordBox
                    x:Name="tbPassword"
                    Height="30"
                    Margin="0,0,0,25"
                    FontSize="14" />

                <!--  Bouton  -->
                <Button
                    x:Name="btnEmploye"
                    Height="40"
                    Margin="0,0,0,10"
                    Background="#5CB85C"
                    Click="btnEmploye_Click"
                    Content="Se connecter"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White" />

                <!--  Footer  -->
                <TextBlock
                    Margin="0,30,0,0"
                    HorizontalAlignment="Center"
                    FontSize="10"
                    Text="© Maison Sibilia – Connexion" />
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
