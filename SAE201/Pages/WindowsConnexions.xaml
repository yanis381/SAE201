<Window x:Class="SAE201.Pages.PageConnexion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <DockPanel Background="#E26A6A">
        <!-- Bandeau rouge avec logo -->
        <Border Background="#E26A6A" Height="80" DockPanel.Dock="Top">
            <Image Source="/image/logo-sibilia.png" Height="50" VerticalAlignment="Center" Margin="20,0"/>
        </Border>

        <!-- Carte blanche centrée -->
        <Border Background="White" CornerRadius="10" Width="420" Padding="30"
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,30">
            <StackPanel VerticalAlignment="Center">
                <!-- Logo -->
                <Image Source="/Image/vache.jpg" Height="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Titre -->
                <TextBlock Text="Connexion – Maison Sibilia" FontSize="18" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,25"/>

                <!-- Login -->
                <TextBlock Text="Nom utilisateur" Margin="0,0,0,5"/>
                <TextBox x:Name="tbLogin" Height="30" FontSize="14" 
                         Text="utilisateur" Foreground="Gray" Margin="0,0,0,15"/>

                <!-- Mot de passe -->
                <TextBlock Text="Mot de passe" Margin="0,0,0,5"/>
                <PasswordBox x:Name="tbPassword" Height="30" FontSize="14" Margin="0,0,0,25"/>

                <!-- Bouton -->
                <Button x:Name="btnEmploye" Content="Se connecter"
                        Height="40" Margin="0,0,0,10" Background="#5CB85C" Foreground="White"
                        FontWeight="Bold" FontSize="14" Click="btnEmploye_Click"/>

                <!-- Footer -->
                <TextBlock Text="© Maison Sibilia – Connexion" FontSize="10"
                           HorizontalAlignment="Center" Margin="0,30,0,0"/>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
