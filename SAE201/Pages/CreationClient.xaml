<Page x:Class="SAE201.Pages.CreationClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SAE201.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="626" d:DesignWidth="435"
      Title="CreationClient">

    <Grid>
        <Border Background="White" CornerRadius="12" Padding="30" Width="420" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel>

                <TextBlock Text="Nouveau client" FontSize="24" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>

                <!-- Nom -->
                <TextBlock Text="Nom" />
                <TextBox Name="NomClientTextBox" MaxLength="30" Margin="0,5,0,15"/>

                <!-- Prénom -->
                <TextBlock Text="Prénom" />
                <TextBox Name="PrenomClientTextBox" MaxLength="30" Margin="0,5,0,15"/>

                <!-- Téléphone -->
                <TextBlock Text="Téléphone" />
                <TextBox Name="TelTextBox" MaxLength="10" Margin="0,5,0,15" />

                <!-- Adresse Rue -->
                <TextBlock Text="Adresse (rue)" />
                <TextBox Name="AdresseRueTextBox" MaxLength="30" Margin="0,5,0,15"/>

                <!-- Code postal -->
                <TextBlock Text="Code Postal" />
                <TextBox Name="AdresseCpTextBox" MaxLength="5" Margin="0,5,0,15"/>

                <!-- Ville -->
                <TextBlock Text="Ville" />
                <TextBox Name="AdresseVilleTextBox" MaxLength="30" Margin="0,5,0,15"/>

                <!-- Boutons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" >
                    <Button Content="Enregistrer" Width="120" Background="#4CAF50" Foreground="White" Margin="10,0" Click="EnregistrerClient_Click"/>
                    <Button Content="Annuler" Width="100" Background="#B71C1C" Foreground="White" Margin="10,0" Click="Retour_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>
