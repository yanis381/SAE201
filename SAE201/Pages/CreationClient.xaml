<Page
    x:Class="SAE201.Pages.CreationClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CreationClient"
    d:DesignHeight="626"
    d:DesignWidth="435"
    mc:Ignorable="d">

    <Grid>
        <Border
            Width="420"
            Padding="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            CornerRadius="12">
            <StackPanel>

                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Nouveau client" />

                <!--  Nom  -->
                <TextBlock Text="Nom" />
                <TextBox
                    Name="NomClientTextBox"
                    Margin="0,5,0,15"
                    MaxLength="30" />

                <!--  Prénom  -->
                <TextBlock Text="Prénom" />
                <TextBox
                    Name="PrenomClientTextBox"
                    Margin="0,5,0,15"
                    MaxLength="30" />

                <!--  Téléphone  -->
                <TextBlock Text="Téléphone" />
                <TextBox
                    Name="TelTextBox"
                    Margin="0,5,0,15"
                    MaxLength="10" />

                <!--  Adresse Rue  -->
                <TextBlock Text="Adresse (rue)" />
                <TextBox
                    Name="AdresseRueTextBox"
                    Margin="0,5,0,15"
                    MaxLength="30" />

                <!--  Code postal  -->
                <TextBlock Text="Code Postal" />
                <TextBox
                    Name="AdresseCpTextBox"
                    Margin="0,5,0,15"
                    MaxLength="5" />

                <!--  Ville  -->
                <TextBlock Text="Ville" />
                <TextBox
                    Name="AdresseVilleTextBox"
                    Margin="0,5,0,15"
                    MaxLength="30" />

                <!--  Boutons  -->
                <StackPanel
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="120"
                        Margin="10,0"
                        Background="#4CAF50"
                        Click="EnregistrerClient_Click"
                        Content="Enregistrer"
                        Foreground="White" />
                    <Button
                        Width="100"
                        Margin="10,0"
                        Background="#B71C1C"
                        Click="Retour_Click"
                        Content="Annuler"
                        Foreground="White" />
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>
