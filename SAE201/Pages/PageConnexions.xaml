<Page x:Class="SAE201.Pages.PageConnexions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SAE201.Pages"
      mc:Ignorable="d" 
      Background="#F4C7C3"
      Title="PageConnexions">

    <DockPanel>
        <!-- Bandeau haut rouge avec logo -->
        <Border Background="#FF5E5E" Height="80" DockPanel.Dock="Top">
            <Image Source="/img/sibilia.png" Height="50" Margin="20,15"/>
        </Border>

        <!-- Formulaire dans StackPanel -->
        <Border Background="White" CornerRadius="10" Width="400" Padding="30"
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,30">

            <StackPanel>
                <Image Source="/img/logo_rond.png" Height="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="Connexion – Maison Sibilia" FontSize="16" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Adresse e-mail" FontWeight="SemiBold"/>
                <TextBox Height="30" Margin="0,5,0,10" Text="prenom.nom@sibilia.fr" Foreground="Gray" TextChanged="TextBox_TextChanged"/>


                <TextBlock Text="Mot de passe" FontWeight="SemiBold"/>
                <PasswordBox Height="30" Margin="0,5,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                    <CheckBox Content="Se souvenir de moi"/>
                    <TextBlock Text="   Mot de passe oublié ?" FontWeight="Bold" VerticalAlignment="Center" Cursor="Hand"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Retour ✖" Width="100" Height="35" Background="#D9534F" 
                            Foreground="White" FontWeight="Bold" Margin="5"/>
                    <Button Content="Valider ✔" Width="100" Height="35" Background="#5CB85C" 
                            Foreground="White" FontWeight="Bold" Margin="5"/>
                </StackPanel>

                <TextBlock Text="© Maison Sibilia – Espace connexion" FontSize="10"
                           HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </DockPanel>
</Page>
